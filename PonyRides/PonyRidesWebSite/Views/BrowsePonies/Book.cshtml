@model PonyRidesWebSite.Models.Data.Booking

@{
    ViewBag.Title = "Book";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h2>Book @ViewBag.Pony</h2>
        @Html.ValidationSummary(true, "", new { @class = "text-danger has-error" })
        <div class="form-group">
            <div class="row">
                <div class="col-md-3">
                    <img src="@ViewBag.Picture" />
                </div>
                <div class="col-md-5">
                    <label>Booking Date (Click and choose date)</label>
                    <div class="form-group">
                        <div id="DayDate" class="datetimepicker"></div>
                        <div class="col-md-10">

                            @Html.HiddenFor(m => m.PonyID);
                            @Html.HiddenFor(m => m.CustomerID);
                            @Html.HiddenFor(m => m.Day);

                        </div>
                    </div>
                    <br />
                    <br />
                    <label>Choose a session</label><br />
                    <div class="btn-group" data-toggle="buttons">
                        <span class="btn btn-primary">
                            @Html.RadioButtonFor(model => model.Session, 1, new { id = "option1" })
                            @Html.Label("option1", "Morning")
                        </span>
                        <span class="btn btn-primary">
                            @Html.RadioButtonFor(model => model.Session, 2, new { id = "option2" })
                            @Html.Label("option2", "Afternoon")
                        </span>
                        <span class="btn btn-primary">
                            @Html.RadioButtonFor(model => model.Session, 3, new { id = "option3" })
                            @Html.Label("option3", "Evening")
                        </span>
                    </div>
                    <br />
                    <br />
                    <br />
                    <br />
                    <input type="submit" value="Create Booking" class="btn btn-default btn-lg btn-lg btn-lg btn-primary" />
                </div>
            </div>
        </div>
    </div>
}



<br />
<br />
<br />
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script type="text/javascript">
    $(function () {
        $('#DayDate').datetimepicker({ inline: true });
    });
    $(function () {
        $('#DayDate').on('dp.change', function (e) {
            var formatted = moment(e.date).format('DD/MM/YYYY');
            document.getElementById('Day').value = formatted;
        });
    });
</script>

